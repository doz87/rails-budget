<div id="budget-container" class="col-xs-12">
    <h1>New Expense</h1>
    <p>Create a new expense for the month</p>

  <%= form_for @expense, url: {action: 'create'} do |f| %>

      <div class="field-container">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>

      <div class="field-container">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>

      <div class="field-container">
        <%= f.label :amount %>
        <%= f.number_field :amount, {step: 1} %>
      </div>

      <div class="field-container">
        <%= f.label :type %>
        <%= f.select(:type, options_for_select(%w'fixed variable')) %>
      </div>


      <%= f.submit %>
  <% end %>
</div>